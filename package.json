{
    "name": "@wonkytech/tm-firebase-user",
    "version": "0.0.17",
    "description": "Web component to manage firebase user authentication.",
    "author": "Tim McMaster",
    "homepage": "https://tmcmaster.github.io/tm-firebase-user",
    "license": "MIT",
    "repository": "https://github.com/tmcmaster/tm-firebase-user",
    "pika": true,
    "sideEffects": true,
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-standard-pkg"
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "@pika/plugin-build-web"
            ]
        ]
    },
    "scripts": {
        "build:public": "npm install && rm -rf public/web_modules && npx @pika/web --dest public/web_modules",
        "serve": "firebase serve --port 8000",
        "build": "pika build",
        "version": "npm run build",
        "publish": "pika publish",
        "build:pika": "(cd pika; npm run build)",
        "demo": "owc-dev-server",
        "deploy": "firebase deploy"
    },
    "dependencies": {
        "@wonkytech/material-elements": "^0.0.6",
        "@wonkytech/tm-firebase-user": "^0.0.17",
        "@wonkytech/tm-script-loader": "^0.0.5",
        "lit-element": "^2.0.1",
        "lit-html": "^1.0.0"
    },
    "devDependencies": {
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.6.1",
        "@pika/plugin-build-types": "^0.6.1",
        "@pika/plugin-build-web": "^0.6.1",
        "@pika/plugin-standard-pkg": "^0.6.1",
        "@pika/types": "^0.6.1",
        "owc-dev-server": "^0.3.0"
    }
}
